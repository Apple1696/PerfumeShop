<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@android:color/white">

    <!-- Success Icon -->
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E8F5E8"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/imageViewSuccess"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_shield"
            android:tint="#4CAF50" />

    </androidx.cardview.widget.CardView>

    <!-- Success Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Placed Successfully!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/textViewOrderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your purchase!\nWe will process your order shortly."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3" />

    <!-- Order Number (Simple) -->

    <!-- Total Amount (Simple) -->

    <!-- Continue Shopping Button -->
    <Button
        android:id="@+id/buttonContinueShopping"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue Shopping"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#ff6b35"
        android:layout_marginTop="16dp" />

</LinearLayout>
