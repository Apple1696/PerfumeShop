<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Perfume Image -->
    <ImageView
        android:id="@+id/imageViewPerfume"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corners"
        android:src="@drawable/placeholder_perfume" />

    <!-- Perfume Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPerfumeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dior Sauvage"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/textViewBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dior"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textViewConcentration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDP"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Qty: 1"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120,000 VND"
                android:textSize="12sp"
                android:textColor="#999999" />

        </LinearLayout>

    </LinearLayout>

    <!-- Total Price -->
    <TextView
        android:id="@+id/textViewTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120,000 VND"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FF6B35"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp" />

</LinearLayout>
