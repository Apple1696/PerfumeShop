<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PerfumeShop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize button color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>

        <!-- Change button default background color -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.PerfumeShop" parent="Base.Theme.PerfumeShop" />
</resources>